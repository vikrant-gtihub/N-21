<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <style>
        *{
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }
        html,body{
            width: 100%;
            height: 100%;
        }
        body>h2{
            text-align: center;
            margin-bottom: 5px;
            text-transform: uppercase;
            font-weight: 500;
            font-size: 22px;
            font-family: cursive;
        }
        #allposts{
            width: 100vw;
            height: 90vh;
            display: flex;
            flex-wrap: wrap;
            gap:10px;
            padding: 10px 15px;
        }
        #postcard{
            padding: 5px 8px;
            border:1px solid #444;
            display: flex;
            flex-direction: column;
            gap:8px;
            align-items: center;
            height: fit-content;
        }
        #postcard img{
            width: 125px;
            height: 125px;
            object-fit: cover;
            object-position: center;
            border-radius: 50%;
        }
        #postcard h2{
            font-size: 18px;
            text-transform: capitalize;
            font-weight: 300;
        }
    </style>
</head>
<body>
    <h2>all posts</h2>
     <div id="allposts">
        <% postsarr.forEach(function(post){ %>
            <div id='postcard'>
               <img src="<%=post.media%>" alt="">
               <h2>post caption..<%=post.caption%></h2>
               <h2>authorname..<%=post.author.username%></h2>
            </div>
       <% }) %>
     </div>
</body>
</html>